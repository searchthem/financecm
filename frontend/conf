worker_processes 1;

events {
    worker_connections 1024;
}

http {
    include     mime.types;

    server {
        listen 80;
        server_name localhost;


        location / {
            try_files $uri $uri/ =404;
        }

        location ^~ /api/ {
            proxy_pass http://localhost:5000;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
        }

        
    }
}